<div id="flash">
  <% unless flash.empty? %>
    <% flash.delete(:timedout).each do |type, message| %>
      <% next if message == t('devise.failure.unauthenticated') %>
      <div class="alert alert-<%= flash_class_for(type) %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  <% end %>
</div>
