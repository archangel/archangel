<div class="btn-toolbar mb-2 mb-md-0">
  <div class="btn-group" role="group" aria-label="<%= t('users.actions') %>">
    <%= link_to_index(t("users.buttons.index"), manage_users_path) if policy(:user).index? && (member_action? || create_actions?) %>
    <%= link_to_show(t("users.buttons.show"), manage_user_path(@user)) if policy(:user).show? && update_actions? %>
    <%= link_to_new(t("users.buttons.new"), new_manage_user_path) if policy(:user).new? && (collection_action? || member_action?) %>
    <%= link_to_edit(t("users.buttons.edit"), edit_manage_user_path(@user)) if policy(:user).edit? && show_action? %>
    <%= link_to_delete(t("users.buttons.destroy"), manage_user_path(@user), data: { confirm: t("users.are_you_sure") }) if policy(:user).destroy? && member_action? %>
  </div>
</div>
