<% content_for :section do %>
  <h1 class="h2"><%= t('collections.titles.index') %></h1>

  <%= render partial: 'buttons' %>
<% end %>

<% if @collections.present? %>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('collections.columns.name') %></th>
          <th><%= t('collections.columns.slug') %></th>
          <th><%= t('collections.columns.published_at') %></th>
          <th class="actions"><%= t('collections.columns.actions') %></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'collection', collection: @collections %>
      </tbody>
    </table>
  </div>

  <%= paginate @collections %>

<% else %>

  <p><%= t('collections.zero') %></p>

<% end %>
