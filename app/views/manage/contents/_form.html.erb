<%= simple_form_for [:manage, content], html: { autocomplete: 'false' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :slug, as: :slug %>
  <%= f.input :body, as: :wysiwyg %>
  <%= f.input :published_at, as: :datetime_picker %>

  <div id="content_stores">
    <%= f.simple_fields_for :stores do |store| %>
      <%= render 'store_fields', f: store %>
    <% end %>

    <div class="links">
      <%= link_to_add_association(f, :stores) %>
    </div>
  </div>

  <%= f.button :submit, data: { disable_with: t('contents.submitting') } %>
<% end %>
