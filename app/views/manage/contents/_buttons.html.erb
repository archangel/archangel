<div class="btn-toolbar mb-2 mb-md-0">
  <div class="btn-group" role="group" aria-label="Actions">
    <%= link_to_index(t("contents.buttons.index"), manage_contents_path) if member_action? || create_actions? %>
    <%= link_to_show(t("contents.buttons.show"), manage_content_path(@content)) if update_actions? %>
    <%= link_to_new(t("contents.buttons.new"), new_manage_content_path) if collection_action? || member_action? %>
    <%= link_to_edit(t("contents.buttons.edit"), edit_manage_content_path(@content)) if show_action? %>
    <%= link_to_delete(t("contents.buttons.destroy"), manage_content_path(@content), data: { confirm: t("contents.are_you_sure") }) if member_action? && !@content.discarded? %>
  </div>
</div>
