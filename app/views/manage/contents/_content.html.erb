<tr>
  <td><%= content.name %></td>
  <td><%= content.slug %></td>
  <td><%= content.published_at %></td>
  <td>
    <%= link_to t("contents.buttons.show"), manage_content_path(content) %>
    <%= link_to t("contents.buttons.edit"), edit_manage_content_path(content) %>
    <%= link_to t("contents.buttons.destroy"), manage_content_path(content), method: :delete, data: { confirm: t("contents.are_you_sure") } %>
  </td>
</tr>
