<tr class="status-<%= content_status(content) %>">
  <td><%= content.name %></td>
  <td><%= content.slug %></td>
  <td><%= l(content.published_at, format: current_site.format_datetime, default: nil) %></td>
  <td>
    <div class="btn-group" role="group" aria-label="Actions">
      <%= link_to_show t("contents.buttons.show"), manage_content_path(content) %>
      <%= link_to_edit t("contents.buttons.edit"), edit_manage_content_path(content) %>
      <%= link_to_delete t("contents.buttons.destroy"), manage_content_path(content), method: :delete, data: { confirm: t("contents.are_you_sure") } %>
    </div>
  </td>
</tr>
